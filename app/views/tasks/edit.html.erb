<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">タスクの編集</h3>
        </div>
        
        <div class="card-body">
          <%= form_with model: @task, local: true do |form| %>
            
            <!-- エラーメッセージ -->
            <% if @task.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@task.errors.count, "error") %> が発生しました:</h5>
                <ul class="mb-0">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- 基本情報 -->
            <h5 class="mt-3">基本情報</h5>
            <div class="mb-3">
              <%= form.label :name, "タスク名", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "タスク名を入力してください" %>
            </div>

            <div class="mb-3">
              <%= form.label :due_date, "期限", class: "form-label" %>
              <%= form.date_field :due_date, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :daily_task_time, "1日の作業時間（分）", class: "form-label" %>
              <%= form.number_field :daily_task_time, class: "form-control", min: 1, step: 1 %>
            </div>

            <!-- 見積日数 -->
            <h5 class="mt-4">見積日数</h5>
            <div class="row mb-3">
              <div class="col-md-4">
                <%= form.label :estimate_min_days, "最短", class: "form-label small" %>
                <%= form.number_field :estimate_min_days, class: "form-control", min: 1, step: 0.5 %>
              </div>
              <div class="col-md-4">
                <%= form.label :estimate_normal_days, "通常", class: "form-label small" %>
                <%= form.number_field :estimate_normal_days, class: "form-control", min: 1, step: 0.5 %>
              </div>
              <div class="col-md-4">
                <%= form.label :estimate_max_days, "最長", class: "form-label small" %>
                <%= form.number_field :estimate_max_days, class: "form-control", min: 1, step: 0.5 %>
              </div>
            </div>

            <!-- 状態と優先度 -->
            <div class="row mb-4">
              <div class="col-md-6">
                <%= form.label :status, "作業状態", class: "form-label" %>
                <%= form.select :status, 
                    options_for_select([['未着手','not_started'],['作業中','in_progress'],['完了','completed'],['保留','on_hold'],['キャンセル','cancelled']], @task.status), 
                    {}, { class: "form-select" } %>
              </div>
              <div class="col-md-6">
                <%= form.label :priority, "優先度", class: "form-label" %>
                <%= form.select :priority, 
                    options_for_select([['低','low'],['中','medium'],['高','high'],['緊急','urgent']], @task.priority), 
                    {}, { class: "form-select" } %>
              </div>
            </div>

            <!-- 小タスク編集 -->
            <h5 class="mt-4">小タスク</h5>
            <%= form.fields_for :sub_tasks do |sf| %>
              <div class="border rounded p-3 mb-3">
                <div class="mb-2">
                  <%= sf.text_field :name, placeholder: "小タスク名", class: "form-control mb-2" %>
                  <%= sf.select :status, [["未着手","not_started"],["作業中","in_progress"],["完了","completed"]], {}, { class: "form-select mb-2" } %>
                  <div class="form-check">
                    <%= sf.check_box :_destroy, class: "form-check-input" %>
                    <%= sf.label :_destroy, "削除", class: "form-check-label" %>
                  </div>
                </div>

                <!-- ステップ編集 -->
                <%= sf.fields_for :steps do |stf| %>
                  <div class="ms-3 mb-2 border-start ps-3">
                    <%= stf.text_field :name, placeholder: "ステップ名", class: "form-control mb-1" %>
                    <%= stf.date_field :due_date, class: "form-control mb-1" %>
                    <div class="form-check">
                      <%= stf.check_box :_destroy, class: "form-check-input" %>
                      <%= stf.label :_destroy, "削除", class: "form-check-label" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- ボタン -->
            <div class="d-flex justify-content-between mt-4">
              <%= link_to "キャンセル", user_root_path, class: "btn btn-secondary" %>
              <%= form.submit "更新", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
