<div class="task-card card mb-3">
  <!-- カードヘッダー：タスク名と状態 -->
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><%= task.name %></h5>
      <span class="badge bg-secondary">
        <%= task.status&.humanize || "未設定" %>
      </span>
    </div>
    
    <!-- カード本体：基本情報 -->
    <div class="card-body">
      <!-- 期限 -->
      <p class="mb-2">
        <strong>期限:</strong> 
        <%= task.due_date&.strftime("%Y年%m月%d日") || "未設定" %>
      </p>
      
      <!-- 見積日数 -->
      <p class="mb-2">
        <strong>見積:</strong> 
        <%= task.estimate_min_days %>〜<%= task.estimate_max_days %>日
      </p>
      
      <!-- 1日の作業時間 -->
      <p class="mb-2">
        <strong>作業時間:</strong> 
        <%= task.daily_task_time %>分/日
      </p>
      
      <!-- 小タスク数 -->
      <p class="mb-2">
        <strong>小タスク:</strong> 
        <%= task.sub_tasks.count %>個
      </p>
      
      <!-- 作成日時 -->
      <p class="mb-0 text-muted small">
        作成: <%= task.created_at.strftime("%m月%d日 %H:%M") %>
      </p>
    </div>
    
    <!-- カードフッター：アクションボタン -->
    <div class="card-footer d-flex gap-2 flex-wrap align-items-center">
      <%= link_to "詳細確認", task_path(task),
            class: "btn btn-primary btn-sm" %>

      <%= link_to "編集", edit_task_path(task),
            class: "btn btn-outline-secondary btn-sm" %>

      <%= button_to "削除", task_path(task), method: :delete,
            data: { turbo_confirm: "本当に削除しますか？" },
            class: "btn btn-danger btn-sm",
            form: { class: "d-inline-block m-0 p-0" } %>
    </div>
</div>