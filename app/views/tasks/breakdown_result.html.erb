<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">AI分解結果の確認・調整</h3>
          <small class="text-muted">内容を確認し、必要に応じて修正してください</small>
        </div>
        
        <div class="card-body">
          <%= form_with model: @task, url: finalize_task_path(@task), method: :patch, local: true do |form| %>
            
            <!-- 基本タスク情報 -->
            <div class="row mb-4">
              <div class="col-md-6">
                <h5>基本情報</h5>
                
                <!-- タスク名 -->
                <div class="mb-3">
                  <%= form.label :name, "タスク名", class: "form-label" %>
                  <%= form.text_field :name, class: "form-control", 
                      placeholder: "タスク名を入力してください（3文字以上50字以内）", required: true %>
                </div>
                
                <!-- 期限 -->
                <div class="mb-3">
                  <%= form.label :due_date, "期限", class: "form-label" %>
                  <%= form.date_field :due_date, value: (@task.due_date || 2.weeks.from_now.to_date), class: "form-control" %>
                </div>
                
                <!-- 1日の作業時間 -->
                <div class="mb-3">
                  <%= form.label :daily_task_time, "1日の作業時間（分）", class: "form-label" %>
                  <%= form.number_field :daily_task_time, value: (@task.daily_task_time || 30), class: "form-control", min: 30, step: 5 %>
                </div>
              </div>
              
              <div class="col-md-6">
                <h5>完了予定日数</h5>
                
                <div class="row">
                  <div class="col-4">
                    <%= form.label :estimate_min_days, "最低必要日数", class: "form-label small" %>
                    <%= form.number_field :estimate_min_days, value: (@task.estimate_min_days || 1), class: "form-control", min: 1, step: 1 %>
                  </div>
                  <div class="col-4">
                    <%= form.label :estimate_normal_days, "標準日数", class: "form-label small" %>
                    <%= form.number_field :estimate_normal_days, value: (@task.estimate_normal_days || 1), class: "form-control", min: 1, step: 1 %>
                  </div>
                  <div class="col-4">
                    <%= form.label :estimate_max_days, "最大見込み日数", class: "form-label small" %>
                    <%= form.number_field :estimate_max_days, value: (@task.estimate_max_days || 1), class: "form-control", min: 1, step: 1 %>
                  </div>
                </div>
                
                <div class="row mt-3">
                  <div class="col-6">
                    <%= form.label :priority, "優先度", class: "form-label" %>
                    <%= form.select :priority, options_for_select([['中', 'medium'],['低', 'low'],['高', 'high'],['緊急', 'urgent']], @task.priority), {}, { class: "form-select" } %>
                  </div>
                  <div class="col-6">
                    <%= form.label :status, "状態", class: "form-label" %>
                    <%= form.select :status, options_for_select([['未着手','not_started'],['作業中','in_progress'],['完了','completed']], @task.status), {}, { class: "form-select" } %>
                  </div>
                </div>
              </div>
            </div>

            <!-- 分解されたタスク一覧 -->
            <h5 class="mt-4">小タスク一覧</h5>

<!-- ★ 小タスク全体を Stimulus コントローラで包む -->
<div data-controller="nested">
  <!-- ★ 既存の小タスクたちを入れる器（追加先） -->
  <div data-nested-target="container">
    <%= form.fields_for :sub_tasks do |sf| %>
      <!-- ★ 個々のアイテムを identify するためのマーカー -->
      <div class="border p-3 mb-3 rounded" data-nested-item>
        <div class="mb-2 d-flex justify-content-between gap-2">
          <div class="flex-grow-1">
            <%= sf.text_field :name, placeholder: "小タスク名", class: "form-control mb-2" %>
            <%= sf.select :status,
                  [["未着手","not_started"],["作業中","in_progress"],["完了","completed"]],
                  {}, { class: "form-select mb-2" } %>
            <!-- ★ 削除は hidden の _destroy を使う（チェックボックス廃止） -->
            <%= sf.hidden_field :_destroy %>
            <!-- （任意）並び順を保存したい場合 -->
            <%= sf.hidden_field :position, value: sf.object.try(:position) %>
          </div>

          <!-- ★ 1行削除ボタン（_destroy=1 を立てて非表示にする） -->
          <button type="button" class="btn btn-outline-danger btn-sm align-self-start"
                  data-action="click->nested#remove">小タスク削除</button>
        </div>

        <!-- ▼ ステップの入れ子：ステップ専用の nested を内側にもう一段 -->
        <div class="ms-1" data-controller="nested">
          <div data-nested-target="container">
            <%= sf.fields_for :steps do |stf| %>
              <div class="ms-3 mb-2" data-nested-item>
                <%= stf.text_field :name, placeholder: "ステップ名", class: "form-control mb-1" %>
                <%= stf.date_field :due_date, class: "form-control mb-1" %>
                <%= stf.hidden_field :_destroy %>
                <%= stf.hidden_field :position, value: stf.object.try(:position) %>
                <button type="button" class="btn btn-outline-danger btn-sm"
        data-action="click->nested#remove">ステップ削除</button>
              </div>
            <% end %>
          </div>

          <!-- ★ ステップのテンプレート（NEW_STEP をユニーク置換して挿入） -->
          <template data-nested-target="template">
            <%= sf.fields_for :steps, Step.new, child_index: "NEW_STEP" do |stf| %>
              <div class="ms-3 mb-2" data-nested-item>
                <%= stf.text_field :name, placeholder: "ステップ名", class: "form-control mb-1" %>
                <%= stf.date_field :due_date, class: "form-control mb-1" %>
                <%= stf.hidden_field :_destroy %>
                <%= stf.hidden_field :position %>
                <button type="button" class="btn btn-outline-danger btn-sm"
        data-action="click->nested#remove">ステップ削除</button>
              </div>
            <% end %>
          </template>

          <button type="button" class="btn btn-outline-primary btn-sm"
        data-action="click->nested#add">+ ステップを追加</button>
        </div>
        <!-- ▲ ステップ入れ子 ここまで -->
      </div>
    <% end %>
  </div>

  <!-- ★ 小タスクのテンプレート（NEW_SUBTASK をユニーク置換） -->
  <template data-nested-target="template">
    <%= form.fields_for :sub_tasks, SubTask.new, child_index: "NEW_SUBTASK" do |sf| %>
      <div class="border p-3 mb-3 rounded" data-nested-item>
        <div class="mb-2 d-flex justify-content-between gap-2">
          <div class="flex-grow-1">
            <%= sf.text_field :name, placeholder: "小タスク名", class: "form-control mb-2" %>
            <%= sf.select :status,
                  [["未着手","not_started"],["作業中","in_progress"],["完了","completed"]],
                  {}, { class: "form-select mb-2" } %>
            <%= sf.hidden_field :_destroy %>
            <%= sf.hidden_field :position %>
          </div>

          <button type="button" class="btn btn-outline-danger btn-sm align-self-start"
            data-action="click->nested#remove">小タスク削除</button>
        </div>

        <!-- 新規小タスク配下にも空のステップ追加UIを同梱（同じパターン） -->
        <div class="ms-1" data-controller="nested">
          <div data-nested-target="container"></div>
          <template data-nested-target="template">
            <%= sf.fields_for :steps, Step.new, child_index: "NEW_STEP" do |stf| %>
              <div class="ms-3 mb-2" data-nested-item>
                <%= stf.text_field :name, placeholder: "ステップ名", class: "form-control mb-1" %>
                <%= stf.date_field :due_date, class: "form-control mb-1" %>
                <%= stf.hidden_field :_destroy %>
                <%= stf.hidden_field :position %>
                <button type="button" class="btn btn-outline-danger btn-sm"
                  data-action="click->nested#remove">ステップ削除</button>
              </div>
            <% end %>
          </template>

          <button type="button" class="btn btn-outline-primary btn-sm"
        data-action="click->nested#add">+ ステップを追加</button>
        </div>
      </div>
    <% end %>
  </template>

  <!-- ★ 小タスクを1行追加 -->
  <button type="button" class="btn btn-outline-primary"
        data-action="click->nested#add">+ 小タスクを追加</button>

            <!-- ヒント -->
            <div class="alert alert-info mt-3">
              <small>
                <strong>💡 ヒント:</strong> 
                この分解結果は参考です。実際のプロジェクトに合わせて調整してください。
              </small>
            </div>

            <!-- 隠しフィールド -->
            <%= form.hidden_field :description_for_ai, value: @task.description_for_ai %>

            <!-- ボタン -->
            <div class="d-flex justify-content-between mt-3">
              <%= link_to "戻る", new_task_path, class: "btn btn-secondary" %>
              <%= form.submit "タスクを登録", class: "btn btn-success btn-lg" %>
            </div>
          
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
