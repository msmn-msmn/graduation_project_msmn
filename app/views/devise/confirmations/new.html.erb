<!-- app/views/devise/confirmations/new.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="text-center mb-0">
            <i class="fas fa-paper-plane me-2"></i>確認メールの再送
          </h2>
        </div>

        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name,
                       url: confirmation_path(resource_name),
                       local: true,
                       html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>

            <!-- エラーメッセージ -->
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- メールアドレス -->
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form-control",
                      placeholder: "ご登録のメールアドレス",
                      value: (resource.respond_to?(:pending_reconfirmation?) && resource.pending_reconfirmation?) ?
                               resource.unconfirmed_email : resource.email,
                      required: true %>
              </div>

              <% if resource.respond_to?(:pending_reconfirmation?) && resource.pending_reconfirmation? %>
                <small class="text-muted d-block mt-1">
                  未確認のメールアドレス：<%= resource.unconfirmed_email %>
                </small>
              <% end %>
            </div>

            <!-- 送信ボタン -->
            <div class="d-grid mb-3">
              <%= f.submit "確認メールを再送する",
                    class: "btn btn-primary btn-lg",
                    data: { disable_with: '<i class="fas fa-spinner fa-spin me-2"></i>送信中...' } %>
            </div>
          <% end %>

          <!-- リンク -->
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
