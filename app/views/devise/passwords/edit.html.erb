<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
          <h4 class="mb-0">新しいパスワードの設定</h4>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            
            <!-- エラーメッセージ表示 -->
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <!-- 新しいパスワード -->
            <div class="mb-3">
              <%= f.label :password, "新しいパスワード", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="text-muted d-block">
                  <%= @minimum_password_length %>文字以上で入力してください
                </small>
              <% end %>
              <%= f.password_field :password, 
                  autofocus: true, 
                  autocomplete: "new-password", 
                  class: "form-control", 
                  placeholder: "新しいパスワードを入力" %>
            </div>

            <!-- パスワード確認 -->
            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  class: "form-control", 
                  placeholder: "もう一度パスワードを入力" %>
            </div>

            <!-- 送信ボタン -->
            <div class="d-grid">
              <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <!-- リンク -->
          <div class="text-center mt-4 pt-3 border-top">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>