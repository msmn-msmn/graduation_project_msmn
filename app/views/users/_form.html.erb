<%= form_with model: @user, local: true, class: "needs-validation" do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @user.errors.count %>件のエラー</strong>：修正してください。
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :username, "ユーザー名", class: "form-label" %>
    <%= f.text_field :username, class: "form-control form-control-lg", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :daily_available_time, "1日の作業可能時間（分）", class: "form-label" %>
    <%= f.number_field :daily_available_time,
          class: "form-control form-control-lg",
          min: 0, step: 5, placeholder: "例：90（分）" %>
    <div class="form-text">※ 分単位で入力（例：120 = 2時間）</div>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
    <div class="form-text">変更すると確認メールが送られる場合があります。</div>
  </div>

  <div class="d-flex gap-2 mt-4">
    <%= f.submit "保存する", class: "btn btn-primary btn-lg" %>
    <%= link_to "キャンセル", users_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
<% end %>