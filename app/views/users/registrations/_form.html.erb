<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { method: :put }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= resource.errors.count %>件のエラー</strong>：修正してください。
      <ul class="mb-0">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- プロフィール情報 -->
  <div class="mb-3">
    <%= f.label :username, "ユーザー名", class: "form-label" %>
    <%= f.text_field :username, class: "form-control form-control-lg", required: true %>
    <div class="form-text">※ 3文字以上のユーザー名にしてください。</div>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
    <div class="form-text">※ 変更すると変更確定メールが送られます。</div>
  </div>

  <div class="mb-3">
    <%= f.label :daily_available_time, "1日の作業可能時間（分）", class: "form-label" %>
    <%= f.number_field :daily_available_time,
          class: "form-control form-control-lg",
          min: 0, step: 5, placeholder: "例：90（分）" %>
    <div class="form-text">※ 分単位で入力（例：120 = 2時間）</div>
  </div>

  <!-- パスワード変更セクション -->
  <h2 class="h6 mt-4 mb-2">パスワード変更</h2>
  <p class="text-muted small">
    パスワードを変更する場合のみ入力してください。未入力の場合は変更されません。
  </p>

  <div class="mb-2">
    <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
    <div class="input-group">
      <%= f.password_field :current_password,
            class: "form-control form-control-lg",
            autocomplete: "current-password",
            id: "current_password" %>
      <button type="button" class="btn btn-outline-secondary" id="toggle_current_password">
        表示
      </button>
    </div>
  </div>

  <div class="mb-2">
    <%= f.label :password, "新しいパスワード", class: "form-label" %>
    <div class="input-group">
      <%= f.password_field :password,
            class: "form-control form-control-lg",
            autocomplete: "new-password",
            id: "new_password" %>
      <button type="button" class="btn btn-outline-secondary" id="toggle_new_password">
        表示
      </button>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
    <div class="input-group">
      <%= f.password_field :password_confirmation,
            class: "form-control form-control-lg",
            autocomplete: "new-password",
            id: "new_password_confirmation" %>
      <button type="button" class="btn btn-outline-secondary" id="toggle_new_password_confirmation">
          表示
      </button>
    </div>
  </div>

  <div class="d-flex gap-2 mt-4">
    <%= f.submit "保存する", class: "btn btn-primary btn-lg" %>
    <%= link_to "キャンセル", users_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
<% end %>