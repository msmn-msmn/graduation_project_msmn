#!/bin/bash
set -e

echo "🚀 ローカルCI チェック開始"
echo "================================="

echo "📝 RuboCop実行中..."
docker compose exec web bundle exec rubocop

echo "🧪 RSpec実行中..."
docker compose exec web bundle exec rspec

echo "🔒 セキュリティチェック実行中..."
docker compose exec web bundle exec brakeman -q

echo "🔍 依存関係チェック実行中..."
docker compose exec web bundle exec bundler-audit

echo "✅ すべてのチェックが完了しました！"
